<div class="col-sm-6 col-lg-4">
	<div class="card">
		<h4 class="card-title">
			<%= post.title %>
		</h4>
		<h6 class="card-subtitle mb-2 text-muted">
				<%= post.display_day_published %>
		</h6>
		<p class="card-text">
			<%= truncate(post.body, length: 150) %>
		</p>
		<p>
		<%= link_to 'Read', post, class: 'btn btn-outline-primary btn-small' %>
		</p>
	</div>
</div>